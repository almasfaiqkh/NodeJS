<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <span class="login100-form-title p-b-49">
                    
                </span>
                <span class="login100-form-title p-b-49">
						Welcome, <%= name %>!
					</span>
                <span class="login100-form-title p-b-49">
						
					</span>
                <center>
                    <table>
                        <tr>
                            <td style="padding-right:10px">
                                <div class="container-login100-form-btn">
                                    <div class="wrap-login100-form-btn" style="width: 120px;">
                                        <div class="login100-form-bgbtn"></div>
                                        <button class="login100-form-btn"><a href="/edit" style="color: white;font-family: Poppins-Medium;font-size: 16px;">Edit</a></button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="container-login100-form-btn">
                                    <div class="wrap-login100-form-btn" style="width:120px;">
                                        <div class="login100-form-bgbtn"></div>
                                        <button class="login100-form-btn" data-toggle="modal" data-target="#delete-alert"><a href="#" style="color: white;font-family: Poppins-Medium;font-size: 16px;">Delete</a></button>
                                    </div>
                                </div>
                            </td>
                            <td style="padding-left:10px">
                                <div class="container-login100-form-btn">
                                    <div class="wrap-login100-form-btn" style="width:120px;">
                                        <div class="login100-form-bgbtn"></div>
                                        <button class="login100-form-btn"><a href="/logout" style="color: white;font-family: Poppins-Medium;font-size: 16px;">Log Out</a></button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </center>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="delete-alert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Account!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to do this?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-outline-danger" onclick="location.href='./delete/<%= name %>'">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
